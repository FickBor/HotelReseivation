<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/hotelreserv_ation_action_bar"></include>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/ovreall_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/banner_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="240dp">

            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="228dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/indicator1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/indicator_unchecked" />

                <ImageView
                    android:id="@+id/indicator2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/indicator_unchecked" />

                <ImageView
                    android:id="@+id/indicator3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/indicator_unchecked" />

                <ImageView
                    android:id="@+id/indicator4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/indicator_unchecked" />

                <ImageView
                    android:id="@+id/indicator5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/indicator_unchecked" />
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/ovreall_relative"
            android:layout_below="@+id/banner_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:id="@+id/ovreall_linear_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dingwei1"
                    android:id="@+id/imageView"
                    android:layout_weight="1" />

                <TextView
                    android:text="城市定位"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ovreall_tv_location"
                    android:gravity="center_vertical"
                    android:textSize="50px"
                    android:layout_weight="4" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ovreall_linear_shouhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ovreall_relative"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jiudian"

                android:id="@+id/ovreall_imagebtn_jiudian"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dingwei"
                android:id="@+id/ovreall_imagebtn_dingwei"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dingdan"
                android:id="@+id/ovreall_imagebtn_dingdan"
                android:layout_weight="1" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ovreall_linear_cihang"
            android:layout_below="@+id/ovreall_linear_shouhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pinglun"
                android:id="@+id/ovreall_imagebtn_pinglun"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yonghu"
                android:id="@+id/ovreall_imagebtn_yonghu"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guanyu"
                android:id="@+id/ovreall_imagebtn_guanyu"
                android:layout_weight="1" />


        </LinearLayout>
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white">

        <ListView

            android:id="@+id/left_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
    </LinearLayout>