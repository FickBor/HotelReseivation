<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hotel_detail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="250dp">
    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:id="@+id/hotel_detail_linear1"
        android:layout_below="@+id/pager"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="TextView"
            android:id="@+id/hotel_detail_linear_tell_name" />


        <LinearLayout
            android:id="@+id/hotel_detail_linear_dizhi"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/btn_star_big_off"
                android:id="@+id/imageView" />
            <TextView
                android:text="地址:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:id="@+id/textView" />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:id="@+id/hotel_detail_address"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hotel_detail_linear_tell"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/btn_star_big_off"
                android:id="@+id/hotel_detail_linear_tell_image" />
            <TextView
                android:text="电话:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:id="@+id/hotel_detail_linear_tell_dianhua" />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:id="@+id/hotel_detail_linear_tell_num"
                android:layout_weight="1" />

            <Button
                android:text="拨打电话"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/hotel_detail_listview"
        android:layout_below="@id/hotel_detail_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>